doctype html
html
  head
    title= title
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    link(rel='stylesheet', href='/stylesheets/style.css')
    if(session)
      link(rel='stylesheet', href=session.Style)
    block css
  body
    nav.navbar.navbar-expand-lg.sticky-top.dark_mode
      div.intermediate-container
        div.title-nav-bar 
          a.navbar-brand(href="/home")
            span.title(style="color:#007bff") S
            span.title(style="color:#28a745") p
            span.title(style="color:#dc3545") a
            span.title(style="color:#ffc107") c
            span.title(style="color:#dc3545") e
            span.title(style="color:#007bff") C
            span.title(style="color:#28a745") h
            span.title(style="color:#dc3545") a
            span.title(style="color:#ffc107") t
        //button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation")
         span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNavAltMarkup
          a.nav-link(href="/home").btn-primary.btn.layoutbutton Home
          a.nav-item.nav-link(href="/home/feed").btn-success.btn.layoutbutton Feed
          a.nav-item.nav-link(href="/home/search").btn-danger.btn.layoutbutton Search
          if(!session)
            a.nav-item.nav-link(href="/home/connection").btn-warning.btn.layoutbutton Log In
          else
            a.nav-item.nav-link(href="/home/disconnect").btn-warning.btn.layoutbutton Disconnect
          a.nav-item.nav-link(href="/home/user/create").btn.btn-secondary.layoutbutton Create User
          if(!(session == undefinied))
            a.nav-item.nav-link(href="/home/user/"+session.Identify).btn.btn-info.layoutbutton User
            a.nav-item.nav-link(href= '/home/user/'+session.Identify+'/post/create' style="background-color:#B34DF0").btn.layoutbutton#createpost Create a Post
            if(session.Status == "Admin")
              a.nav-item.nav-link(href='/home/users/banned').btn.btn-dark.layoutbutton Banned Users
    block content
    block javascript 
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
